<Window x:Class="WPFbrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFbrowser"
        mc:Ignorable="d"
        Title="NotSoTotalCommander" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TreeView Name="treeView" Margin="3" SelectedItemChanged="treeViewSelectedItemChanged" MouseDoubleClick="mouse_DoubleClick" ></TreeView>
        <RichTextBox Name="rightSide" Grid.Column="1" IsReadOnly="True" Margin="3" ></RichTextBox>
    </Grid>
</Window>
